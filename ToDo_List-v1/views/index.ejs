<%-include("header")%>

    <body>
        <div class="box" id="heading">
            <h1>
                <%=listTitle%>
            </h1>
        </div>

        <div class="box">
            <% for (var i =0; i <listItem.length;  i++ ) { %>
                <div class="item">
                    <input type="checkbox">
                    <p>
                        <%= listItem[i] %>
                    </p>
                </div>
                <% } %>
                    <form class="item" action="/" method="post">
                        <input type="text" name="item" placeholder="New Task">
                        <button type="submit">+</button>
                    </form>
        </div>



    </body>
    <%-include ("footer") %>

